<div ng-controller="PostEventController">
    <h4 class="control-label">Post Event</h4>
    <form class="form-horizontal" role="form" ng-submit="submitEvent()">


            <div class="form-group">
                <label class="control-label col-sm-2" for="Title">Title:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Title" id="Title" placeholder="Enter Title">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="EventLocation">Publish Date:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="EventLocation" id="EventLocation" placeholder="Enter One Word Location">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="EventContent">Event Content:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" name="EventContent" id="EventContent" placeholder="Enter Event Content"></textarea>
            
                </div>
            </div>

      
        <div class="form-group">
            <div class="col-sm-offset-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>

    </form>
</div>

