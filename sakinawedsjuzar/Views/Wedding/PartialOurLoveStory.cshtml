@model sakinawedsjuzar.Models.MasterModel
<div class="container white-block">

    @foreach (var item in Model.lovestories)
    {
        if (item.TemplateId == 1)
        {
        <div class="row photosection">
            <div class="col-md-5 col-sm-4 col-xs-12" data-scroll-reveal="enter left move 50px, after 0.3s">
                <img alt="He Saw Her" src="@item.ImageUrl" class="img-responsive" />
            </div>
            <div class="col-md-7 col-sm-8 col-xs-12" data-scroll-reveal="enter right move 50px, after 0.3s">
                <div class="head_part">
                    <h2 class="text-right">@item.Title1 <strong>@item.Title2</strong></h2>
                    <span class="pull-right">@item.PublishDate</span>
                </div>
                <p>@item.Content
                </p>
                <div class="special_comments">
                    <div class="box">
                        <div class="frame">
                            <p>@item.SpecialComment</p>
                            <p><em>... @item.CommentBy</em></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        }
        else
        {
        <div class="row photosection">
            <div class="col-md-6 col-sm-8 col-xs-12" data-scroll-reveal="enter left move 50px, after 0.3s">
                <div class="head_part">
                    <h2 class="text-left">@item.Title1<strong>@item.Title2</strong></h2>
                    <span class="pull-left">@item.PublishDate</span>
                </div>
                <p>@item.Content</p>
                <div class="special_comments">
                    <div class="box">
                        <div class="frame">
                            <p>@item.SpecialComment</p>
                            <p><em>... @item.CommentBy</em></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-4 col-xs-12" data-scroll-reveal="enter right move 50px, after 0.3s">
                <img alt="Our First date" src="@item.ImageUrl" class="img-responsive pull-right" />
            </div>
        </div>   
        <div class="clearfix"></div>  
        
        }


    }
</div>




