@model sakinawedsjuzar.Models.MasterModel
 

<div id="main-slider" class="flexslider fullscreen">
            <!-- MAIN SLIDER TITLE OUTTER WRAPPER -->
            <div class="slide-title-outter-wrapper">
                <!-- MAIN SLIDER TITLE INNER WRAPPER -->
                <div class="slide-title-inner-wrapper">
                    <!-- TITLE -->
                    <div class="slide-title align-middle">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-6 slider_text" data-scroll-reveal="enter top move 50px, after 0.4s">
                                    <h1>@Model.CommonInfo.BrideFullName &amp; @Model.CommonInfo.GroomFullName</h1>
                                    <div class="banner-text_wrap">
                                        <div class="banner-text light medium" style="letter-spacing: 3px">
                                            <h4>*** We are getting married! ***</h4>
                                            <h4>@string.Format("{0}{1}{2}{3}{4}{5}{6}{7}", Model.CommonInfo.WeddingDate.DayOfWeek, ",", " ",  Model.CommonInfo.WeddingDate.ToString("MMMM"), ",", Model.CommonInfo.WeddingDate.Day, " " , Model.CommonInfo.WeddingDate.Year)</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END of MAIN SLIDER TITLE INNER WRAPPER -->
            </div>
            <!-- END of MAIN SLIDER TITLE OUTTER WRAPPER -->

            <!-- MAIN SLIDER IMAGES -->
            <ul class="slides">

                @foreach(var item in Model.MainSlideImages)
                {
                <li>
                    <!-- SLIDE IMAGE -->
                    <div data-stellar-ratio="0.5" class="slide-image" style="background-image: url(@item.Url);"></div>
                    <!-- SLIDE OVERLAY -->
                    <div class="slide-overlay" style="opacity: 0.2"></div>
                </li>
                }
            </ul>
            <!-- END of MAIN SLIDER IMAGES -->

            <!-- Chevron Start -->
            <div class="scrollbott animated opacity-0">
                <a data-scroll data-toggle="tooltip" data-placement="top" data-title="Groom &amp; Bride" data-trigger="hover" href="#ourstory" class="anchor-link"><i class="fa fa-caret-down fa-2x"></i></a>
            </div>
            <!-- Chevron End -->
            <div class="clearfix"></div>
        </div>